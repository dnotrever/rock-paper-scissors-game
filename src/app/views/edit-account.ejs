<%- include('./main') -%>

<link href="css/main.css" rel="stylesheet">
<link href="css/edit-account.css" rel="stylesheet">

<div class="container d-flex">

    <div class="settings-title">
        <h2>Edit Your Account Infos</h2>
      </div>

        <form class="settings-form">

            <div style="display: none" class="playerId"><%- player._id -%></div>

            <div class="form-group settings-username">
                <small class="username-success msg-success settings-warnings"></small>
                <small class="username-error msg-error settings-warnings"></small>
                <input type="text" class="form-control" name="username" placeholder=" New Username">
            </div>

            <div class="form-group settings-email">
                <small class="email-success msg-success settings-warnings"></small>
                <small class="email-error msg-error settings-warnings"></small>
                <input type="email" class="form-control" name="email" placeholder=" New Email">
            </div>
        
            <div class="form-group settings-password">
                <small class="password-success msg-success settings-warnings"></small>
                <small class="password-error msg-error settings-warnings"></small>
                <input type="password" class="form-control" name="password" placeholder=" New Password"> 
                <small class="form-text text-muted">Password must contain a least 5 characteres</small>
            </div>

            <div class="settings-button">
                <button type="submit" class="btn btn-primary">Sign Up!</button>
            </div>
            
        </form>

    <div class="msg-success">
        <ul>
            <li class="username-success"></li>
            <li class="email-success"></li>
            <li class="password-success"></li>
        </ul>
    </div>

    <div class="settings-submenu">
        <p><a href="/profile">Come to Profile</a></p>
    </div>
    
</div>

<script src="js/settings.js"></script>
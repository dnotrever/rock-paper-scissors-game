
<link href="css/main.css" rel="stylesheet">
<link href="css/ranking.css" rel="stylesheet">

<div class="ranking-page container d-flex flex-column">

    <div class="ranking-title">
        <h2>Ranking</h2>
    </div>

    <table class="ranking-table table table-bordered table-hover">

        <thead>
            <tr>
                <th scope="col">Player</th>
                <th scope="col">Plays</th>
                <th scope="col">Wins</th>
                <th scope="col">Draws</th>
                <th scope="col">Losses</th>
            </tr>
        </thead>

        <tbody>
            <% if (result) { %>
                <% result.map(player => { %>
                    <tr>
                        <td><%= player.username %></td>
                        <td><%= player.plays %></td>
                        <td><%= player.wins %></td>
                        <td><%= player.draws %></td>
                        <td><%= player.losses %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>

    </table>
    
    <% if (result.length === 0) { %>
        <p><%- noPlayers %></p>
    <% } %>

</div>

<script src="js/ranking.js"></script>
<%- include('./main') -%>

<link href="css/main.css" rel="stylesheet">
<link href="css/ranking.css" rel="stylesheet">

<body>
    
    <div class="container d-flex flex-column">
    
        <div class="ranking-title">
            <h2>Ranking!</h2>
        </div>
    
        <table>

            <tr>
                <th>Player</th>
                <th>Plays</th>
                <th>Wins</th>
                <th>Draws</th>
                <th>Losses</th>
            </tr>

            <% if (result) { %>

                <% result.map(player => { %>
                    <tr>
                        <td><%= player.username %></td>
                        <td><%= player.plays %></td>
                        <td><%= player.wins %></td>
                        <td><%= player.draws %></td>
                        <td><%= player.losses %></td>
                    </tr>
                <% }) %>

            <% } %>

        </table>
        
        <% if (result.length === 0) { %>

            <p><%- noPlayers %></p>

        <% } %>

        <div class="signup-submenu">

            <% if (player) { %>

                <a href="/profile">Back to Profile</a>
                <a href="/game">Back to Game</a>

            <% } else { %>

                <a href="/">Back to Home</a>

            <% } %>

        </div>

     </div>

</body>

<script src="js/ranking.js"></script>

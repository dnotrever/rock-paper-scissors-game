<%- include('./main') -%>

<link href="css/main.css" rel="stylesheet">
<link href="css/register.css" rel="stylesheet">

<div class="container d-flex flex-column">

      <div class="register-title">
        <h2>Sign Up!</h2>
      </div>

      <form class="register-form" action="/register" method="POST">
    
        <div class="form-group register-username">
          <input type="text" class="form-control" name="username" placeholder="Username">
        </div>
    
        <div class="form-group register-email">
          <input type="email" class="form-control" name="email" placeholder="Email">
          <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
    
        <div class="form-group register-password">
          <input type="password" class="form-control" name="password" placeholder="Password"> 
          <small class="form-text text-muted">Password must contain a least 5 characteres</small>
        </div>
    
        <div class="register-button">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
        
      </form>
    
      <div class="register-warnings">

        <% if (locals.dataErrors) { %>
          <ul class="register-warnings-title">The following errors have occurred:</ul>
          <% for (let i=0; i<dataErrors.length; i++) { %>
            <li class="register-warnings-line"> <%-dataErrors[i]-%> </li>
          <% } %> 
        <% } %> 
        
      </div>

    <div class="register-submenu">
      <p><a href="/">Come Back to the Home</a></p>
      <p>
        Already a player?
        <a href="/login">Sign In!</a>
      </p>  
    </div>
      
</div>
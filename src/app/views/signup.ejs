<%- include('./main') -%>

<link href="css/main.css" rel="stylesheet">
<link href="css/signup.css" rel="stylesheet">

<div class="container d-flex flex-column">

      <div class="signup-title">
        <h2>Sign Up!</h2>
      </div>

      <form class="signup-form">

        <div class="form-group signup-username">
          <small class="username-error signup-warnings"></small>
          <input type="text" class="form-control" name="username" placeholder="Username">
        </div>

        <div class="form-group signup-email">
          <small class="email-error signup-warnings"></small>
          <input type="email" class="form-control" name="email" placeholder="Email">
          <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
    
        <div class="form-group signup-password">
          <small class="password-error signup-warnings"></small>
          <input type="password" class="form-control" name="password" placeholder="Password"> 
          <small class="form-text text-muted">Password must contain a least 5 characteres</small>
        </div>
    
        <div class="signup-button">
          <button type="submit" class="btn btn-primary">Sign Up!</button>
        </div>
        
      </form>

    <div class="signup-submenu">
      <p><a href="/">Come Back to the Home</a></p>
      <p>
        Already a player?
        <a href="/login">Sign In!</a>
      </p>  
    </div>
      
</div>

<script src="js/signup.js"></script>
